{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="{{ path('Programs') }}">{{ msg('my-programs') }}</a></li>
        <li><a href="{{ path('Program', {'programId': event.program.id}) }}">{{ bdi(event.program.displayTitle) }}</a></li>
        <li class="active">{{ msg('create-new-event') }}</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="container">
        {{ form_start(form, {'method': 'post', 'attr': {'id': 'event_form'}}) }}
            <div class="page-header">
                <div class="btn-group pull-right text-right">
                    <a class="btn btn-default" href="{{ path('Program', {'programId': event.program.id}) }}">{{ msg('cancel') }}</a>
                    {{ form_widget(form.submit, {'label': msg('save'), 'attr': {'class': 'btn-primary'}}) }}
                </div>
                <h1>{{ msg('create-new-event') }}</h1>
            </div>

            {% include 'events/_form.html.twig' with {'form': form} %}
        {{ form_end(form, {'render_rest': false}) }}
    </div>
{% endblock %}
