{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li>
            <a href="{{ path('Programs') }}">{{ msg('my-programs') }}</a>
        </li>
        <li>
            <a href="{{ path('Program', {'programTitle': event.program.title}) }}">{{ bdi(event.program.displayTitle) }}</a>
        </li>
        <li class="active">
            {{ msg('create-new-event') }}
        </li>
    </ol>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="page-header">
            <h1>{{ msg('create-new-event') }}</h1>
        </div>

        {{ form_start(form, {'method': 'post', 'attr': {'id': 'event_form'}}) }}
            {% include 'events/_form.html.twig' with {'form': form} %}
        {{ form_end(form, {'render_rest': false}) }}
    </div>
{% endblock %}
