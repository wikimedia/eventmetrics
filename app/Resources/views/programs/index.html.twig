{% extends 'base.html.twig' %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="active">{{ msg('my-programs') }}</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="page-header">
            <a href="{{ path('NewProgram') }}" class="btn btn-default pull-right">
                {{ msg('create-new-program') }}
            </a>
            <h1>{{ msg('my-programs') }}</h1>
        </div>

        <table class="table gm-table programs-list">
            <thead>
                <tr>
                    <th>{{ msg('program') }}</th>
                    <th></th>
                    <th class="center-align-cell">{{ msg('events') }}</th>
                    <th class="center-align-cell">{{ msg('participants') }}</th>
                    <th class="center-align-cell">{{ msg('new-editors') }}</th>
                    <th class="center-align-cell">{{ msg('day-retention', [30]) }}</th>
                    <th class="center-align-cell">{{ msg('pages-created') }}</th>
                    <th class="center-align-cell">{{ msg('pages-improved') }}</th>
                </tr>
            </thead>
            <tbody>
                {% for program in programs %}
                    <tr class="program-entry">
                        <td>
                            <a href="{{ path('Program', {'title': program.title}) }}">{{ program.displayTitle }}</a>
                        </td>
                        <td>
                            <a href="{{ path('EditProgram', {'title': program.title}) }}"
                               class="program-action program-action__edit text-muted">
                                <span class="glyphicon glyphicon-cog"></span>
                            </a>
                            <a href="{{ path('DeleteProgram', {'title': program.title}) }}"
                               class="program-action program-action__delete text-danger"
                               data-title="{{ program.displayTitle }}">
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                        </td>
                        <td class="center-align-cell">{{ program.numEvents }}</td>
                        <td class="center-align-cell">0</td>
                        <td class="center-align-cell">0</td>
                        <td class="center-align-cell">0</td>
                        <td class="center-align-cell">0</td>
                        <td class="center-align-cell">0</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
