{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li>
            <a href="{{ path('Programs') }}">{{ msg('my-programs') }}</a>
        </li>
        <li class="active">{{ bdi(program.displayTitle) }}</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="page-header">
            <h1>{{ msg('edit-program') }}</h1>
        </div>

        {{ form_start(form, {'method': 'post', 'attr': {'autocomplete': 'off'}}) }}
            {% include 'programs/_form.html.twig' with {'form': form} %}
        {{ form_end(form) }}
    </div>
{% endblock %}
