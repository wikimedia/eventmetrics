{
    "name": "lziemba/grantmetrics",
    "description": "WMF tool that provides grantees a simple, easy to use interface for reporting their shared metrics",
    "license": "GPL-3.0-or-later",
    "type": "project",
    "autoload": {
        "psr-4": {
            "AppBundle\\": "src/AppBundle"
        },
        "classmap": [
            "app/AppKernel.php",
            "app/AppCache.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "files": [
            "vendor/symfony/symfony/src/Symfony/Component/VarDumper/Resources/functions/dump.php"
        ]
    },
    "require": {
        "ext-json": "*",
        "ext-PDO": "*",
        "ext-redis": "*",
        "php": "^7.2",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-migrations-bundle": "^1.0",
        "doctrine/orm": "^2.5",
        "eightpoints/guzzle-bundle": "^7.0",
        "leafo/scssphp": "^0.7.1",
        "sensio/framework-extra-bundle": "^5.2",
        "symfony/webpack-encore-pack": "^1.0",
        "symfony/monolog-bundle": "^3.3",
        "symfony/polyfill-apcu": "^1.0",
        "symfony/swiftmailer-bundle": "^3.0",
        "symfony/symfony": "^4.0",
        "twig/twig": "^2.0",
        "wikimedia/toolforge-bundle": "^0.5"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "johnkary/phpunit-speedtrap": "^3.0",
        "nelmio/alice": "^3.5",
        "symfony/maker-bundle": "^1.6",
        "squizlabs/php_codesniffer": "^3.3",
        "symfony/phpunit-bridge": "^4.1"
    },
    "scripts": {
        "symfony-scripts": [
            "php bin/console cache:clear",
            "php bin/console doctrine:database:create --if-not-exists",
            "php bin/console doctrine:migration:migrate"
        ],
        "post-install-cmd": [
            "@symfony-scripts"
        ],
        "post-update-cmd": [
            "@symfony-scripts"
        ],
        "migrate-test": [
            "php bin/console doctrine:database:create --env=test --if-not-exists",
            "php bin/console doctrine:migrations:migrate --env=test"
        ],
        "lint": [
            "composer validate",
            "./bin/console lint:twig ./app/Resources/views",
            "./bin/console lint:yaml ./app/config",
            "./bin/console lint:yaml .travis.yml",
            "./vendor/bin/phpcs -s ."
        ],
        "docs": [
            "build/phpdoc-install.php",
            "bin/phpdoc run --title='GrantMetrics Documentation'"
        ],
        "unit": [
            "./vendor/bin/phpunit tests"
        ],
        "test": [
            "@migrate-test",
            "@lint",
            "@docs",
            "@unit"
        ]
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.2"
        }
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-tests-dir": "tests",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        },
        "branch-alias": null
    }
}
